{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div><h4 class="text-center">Liste des contacts </h4></div>

        {% if app.user %}

            <div class="row row col-md-12 pull-right ">
                <a href="{{ path('contacts_new') }}" class="btn btn-primary btn-xs pull-right"><b>+</b> Ajouter un
                    contact</a>
            </div>

            <div class="row  custyle">

                <table class="table table-striped custab">
                    <thead>

                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Email</th>
                        <th class="text-center">Action</th>
                    </tr>
                    </thead>

                        {% for contact in contacts %}
                                <tr>
                                    <td>{{ contact.id|e }}</td>
                                    <td>{{ contact.nom|e }}</td>
                                    <td>{{ contact.prenom|e }}</td>
                                    <td>{{ contact.email|e }}</td>
                                    <td class="text-center">
                                        <a class='btn btn-info btn-xs'
                                           href="{{ path('addresses_show', {'id': contact.id}) }}"><span
                                                    class="glyphicon glyphicon-edit"></span> Adresses</a>
                                        <a class='btn btn-info btn-xs'
                                           href="{{ path('contacts_edit', {'id': contact.id}) }}"><span
                                                    class="glyphicon glyphicon-edit"></span> Edition</a>
                                        <a href="{{ path('contacts_delete', {'id': contact.id}) }}" class="btn btn-danger btn-xs"><span
                                                    class="glyphicon glyphicon-remove"></span> Suppression</a>
                                    </td>
                                </tr>
                        {% endfor %}
                </table>
            </div>
        {% else %}

            <a class='btn btn-info btn-xs display-block m-t-6'
       href="{{ path('login') }}"><span
                class="glyphicon glyphicon-edit"></span> Merci de vous connecter</a>

        {% endif %}
    </div>
{% endblock %}
