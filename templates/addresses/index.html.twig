{% extends 'base.html.twig' %}

{% block title %}Addresses index{% endblock %}

{% block body %}
    <h1>Addresses index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Street</th>
                <th>Postalcode</th>
                <th>City</th>
                <th>Country</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            <tr>
                <td>{{ address.id }}</td>
                <td>{{ address.number }}</td>
                <td>{{ address.street }}</td>
                <td>{{ address.postalcode }}</td>
                <td>{{ address.city }}</td>
                <td>{{ address.country }}</td>
                <td>
                    <a href="{{ path('addresses_show', {'id': address.id}) }}">show</a>
                    <a href="{{ path('addresses_edit', {'id': address.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('addresses_new') }}">Create new</a>
{% endblock %}
